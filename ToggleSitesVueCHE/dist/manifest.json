{
    "manifest_version": 2,
    "name": "Simple Vue Toggle Sites",
    "version": "1.0.0",
    "description": "A Vue extension that quickly block or allow a list of websites.",
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": ["js/background.js"]
    },
    "browser_action": {
        "default_popup": "popup.html"
    }
}